@{
    ViewData["Title"] = "VerDetallePartido";
}
<h1>Informaci√≥n sobre el partido @ViewBag.VerDetallePartido.Nombre</h1>
<div class="InfoBasica">
<img src="@ViewBag.VerDetallePartido.Logo" height="150">
<p>Fecha de fundacion: @ViewBag.VerDetallePartido.FechaFundacion.ToShortDateString()</p>
<p>ID: @ViewBag.VerDetallePartido.IdPartido</p>
<p>Sitio Web: @ViewBag.VerDetallePartido.SitioWeb</p>
<p>Cantidad de diputados: @ViewBag.VerDetallePartido.CantidadDiputados</p>
<p>Cantidad de senadores: @ViewBag.VerDetallePartido.CantidadSenadores</p>
</div>
<h2>Candidatos</h2>
@foreach (Candidato item in ViewBag.ListaCandidatos)
{
    <div class="InfoCandidatos">
    <h3>
        @item.Nombre  @item.Apellido
    </h3>
    <a href='@Url.Action("VerDetalleCandidato",new{idCandidato=@item.IdCandidato}), "VerDetallePartido","Home", new {IdPartido=@item.IdPartido})'><img src="@item.Foto"height="250"></a>
    <p><b>Postulacion: @item.Postulacion</b></p>
    <p><u>ID: @item.IdCandidato</u></p>
    </div>
}
<a href='@Url.Action("AgregarCandidato", "Home", new {idPartido=@ViewBag.VerDetallePartido.IdPartido})'><button>Agregar un candidato</button></a>